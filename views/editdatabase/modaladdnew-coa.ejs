<!-- Modal modal-lg  data-bs-backdrop="static" data-bs-keyboard="false" -->
<div class="modal fade" id="modaladdnewitem" tabindex="-1" aria-labelledby="modaladdnewitemlabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-md">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="modaladdnewitemlabel" style="font-weight: bold; vertical-align: middle">
          Add New Coa
        </h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <span class="d-none" id="iduniversals"></span>
        <div id="itemsContainer" class="row mt-2">
          <div id="item-1" class="partitems" >
            <div class="col">
              <div class="input-group input-group-sm mb-3">
                <span class="input-group-text"
                  style="background-color: rgb(226, 221, 221); font-size: 12px; width: 120px;">
                  <span class="text-danger">*&nbsp;</span> Kode Coa
                </span>
                <input type="number" class="form-control" id="kode-1" name="kode" placeholder="Kode Coa"
                  style="font-size: 12px" oninput="oninputdata()" />
              </div>


              <div class="input-group input-group-sm mb-3">
                <span class="input-group-text" style="background-color: rgb(226, 221, 221); font-size: 12px;">
                  <span class="text-danger"></span> Nama Plan
                </span>
                <div class="form-control d-flex flex-wrap" id="namaplan-wrapper-1"
                  style="gap: 5px; font-size: 12px; min-height: 32px; cursor: text;" onclick="focusInput(this)">
                  <input type="text" id="namaplan-1" name="namaplan" placeholder="Nama Plan"  style="font-size: 12px"
                    class="border-0 flex-grow-1" onkeydown="handleMultiInput(event, this)" />
                </div>
              </div>

              <div class="input-group input-group-sm mb-3">
                <span class="input-group-text" style="background-color: rgb(226, 221, 221); font-size: 12px; ">
                  <span class="text-danger"></span> Keterangan
                </span>
                <input type="text" list="listketeranganadd-1" class="form-control" id="keterangan-1" name="keterangan"
                  placeholder="Keterangan" style="font-size: 12px" oninput="oninputdata()" />
                <datalist id="listketeranganadd-1">
                </datalist>
              </div>
              <div class="input-group input-group-sm mb-3">
                <span class="input-group-text" style="background-color: rgb(226, 221, 221); font-size: 12px;">
                  <span class="text-danger"></span> Note
                </span>
                <textarea class="form-control" id="note-1" name="note" placeholder="Note"
                  style="font-size:12px; height:70px;" oninput="oninputdata()"></textarea>
              </div>

            </div>
            <div class="d-flex justify-content-end d-none">
              <button type="button" class="removeItem btn btn-danger btn-sm" id="removeItem-1"
                onclick="removeItem(this)">
                <i class="bi bi-trash3-fill" style="color: white"></i>&nbsp;Hapus
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="d-flex align-items-center justify-content-between w-100" id="addnewitemtombolfooters">
          <div>
            <button type="button" class="btn btn-secondary" id="addmore" onclick="additems()">
              Add More
            </button>
          </div>
          <div>
            <button type="button" class="btn btn-secondary me-3" id="submitsave" onclick="submitsave()">
              Save
            </button>

            <button type="button" class="btn btn-light border-secondary-subtle rownama" data-bs-dismiss="modal">
              Batal
            </button>
          </div>
        </div>

        <div class="d-flex align-items-center justify-content-end w-100 d-none" id="edititemtombolfooters">
          <button type="button" class="btn btn-secondary me-3" id="submitsave" onclick="submitsaveedit()">
            Save
          </button>

          <button type="button" class="btn btn-light border-secondary-subtle rownama" data-bs-dismiss="modal">
            Batal
          </button>
        </div>
      </div>
    </div>
  </div>
</div>